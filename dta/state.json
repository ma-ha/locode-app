{
  "1000/Ticket": {
    "scopeId": "1000",
    "state":{
      "null" : {
        "actions" : {
          "Create": {
            "to": "Open"
          }
        }
      },
      "Open": {
        "actions" : {
          "StartProgress": {
            "label":"Start Progress",
            "to": "InProgress"
          },
          "Reject": {
            "to": "Closed"
          },
          "Blocked": {
            "to": "Blocked"
          }
        }
      },
      "InProgress" : {
        "actions" : {
          "Done": {
            "to": "Review"
          },
          "StopProgress": {
            "to": "Open"
          },
          "SetBlocked": {
            "to": "Blocked"
          }
        }
      },
      "Blocked" : {
        "actions" : {
          "StartProgress": {
            "to": "InProgress"
          },
          "Unblock": {
            "to": "Open"
          }
        }
      },
      "Review" : {
        "actions" : {
          "Reopen": {
            "to": "Open"
          },
          "Close": {
            "to": "Closed"
          }
        }
      },
      "Closed" : {
        "actions" : {
          "Reopen": {
            "to": "Open"
          }
        }
      }
    }
  }
}